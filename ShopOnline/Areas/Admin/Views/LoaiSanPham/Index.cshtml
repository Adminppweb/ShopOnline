@model IEnumerable<ShopOnline.Areas.LoaiSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Loại sản phẩm
        <small>Danh sách loại sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Loại sản phẩm</li>
    </ol>
</section>
<div class="col-md-2">
    @Html.ActionLink("Thêm Mới", "Create")
</div>
<div class="col-md-12">
    <div class="box">
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TenLoai)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserAdmin.UserName)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenLoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserAdmin.UserName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Loai }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID_Loai }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Loai })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>