@model IEnumerable<ShopOnline.Areas.ThanhVien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Thành Viên
        <small>Danh sách người dùng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","ThanhVien")"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Thành viên</li>
    </ol>
</section>
<div class="col-md-12">
    <div class="box">
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.TaiKhoan)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.MatKhau)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HoTen)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NgaySinh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoDT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DiaChi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CMND)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.HinhAnh)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PhanQuyen.LoaiQuyen)
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TaiKhoan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MatKhau)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HoTen)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgaySinh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DiaChi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CMND)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.HinhAnh)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhanQuyen.LoaiQuyen)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.ID_TV })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>